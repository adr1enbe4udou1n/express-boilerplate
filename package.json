{
  "name": "expressjs-boilerplate",
  "version": "1.0.0",
  "description": "Lite Frontend boilerplate based on Bootstrap for pure showcase/prototype sites, with Webpack for assets management and Nunjucks as template engine.",
  "scripts": {
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development webpack --progress --hide-modules",
    "watch": "cross-env NODE_ENV=development gulp serve",
    "hot": "cross-env NODE_ENV=development gulp serve --hot",
    "prod": "npm run production",
    "production": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "start": "node ./bin/www"
  },
  "engines": {
    "node": ">=6"
  },
  "author": "Adrien Beaudouin",
  "license": "MIT",
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "bootstrap": "4.0.0-alpha.6",
    "browser-sync": "^2.18.12",
    "browser-sync-webpack-plugin": "^1.2.0",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "font-awesome": "^4.7.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "gulp": "^3.9.1",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.2.1",
    "html-loader": "^0.4.5",
    "img-loader": "^2.0.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "resolve-url-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "slick-carousel": "^1.6.0",
    "style-loader": "^0.18.2",
    "sweetalert2": "^6.6.5",
    "uglify-js": "^3.0.23",
    "vue": "^2.3.4",
    "vue-loader": "^13.0.0",
    "vue-template-compiler": "^2.3.4",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-notifier": "^1.5.0",
    "webpack-stats-plugin": "^0.1.5"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "connect-livereload": "^0.6.0",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "nunjucks": "^3.0.1",
    "serve-favicon": "^2.4.3"
  }
}
